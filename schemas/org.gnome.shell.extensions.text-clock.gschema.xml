<schemalist>
  <enum id="org.gnome.shell.extensions.text-clock.fuzziness">
    <value value="0" nick="1 minute"/>
    <value value="1" nick="5 minutes"/>
    <value value="2" nick="10 minutes"/>
    <value value="3" nick="15 minutes"/>
  </enum>

  <enum id="org.gnome.shell.extensions.text-clock.time-format">
    <value value="0" nick="format-one"/>
    <value value="1" nick="format-two"/>
  </enum>

  <enum id="org.gnome.shell.extensions.text-clock.divider-preset">
    <value value="0" nick="pipe"/>
    <value value="1" nick="bullet"/>
    <value value="2" nick="double-pipe"/>
    <value value="3" nick="dash"/>
    <value value="4" nick="custom"/>
  </enum>

  <enum id="org.gnome.shell.extensions.text-clock.color-mode">
    <value value="0" nick="default"/>
    <value value="1" nick="accent"/>
    <value value="2" nick="custom"/>
  </enum>

  <schema id='org.gnome.shell.extensions.text-clock' path='/org/gnome/shell/extensions/text-clock/'>
    <key name='show-date' type='b'>
      <default>true</default>
      <summary>Show the date</summary>
      <description>
            Whether to show the date in addition to the time.
      </description>
    </key>
    <key name='fuzziness' enum="org.gnome.shell.extensions.text-clock.fuzziness">
      <default>"5 minutes"</default>
      <summary>Time fuzziness</summary>
      <description>
            The number of minutes to fuzz the displayed time by.
      </description>
    </key>
    <key name='show-weekday' type='b'>
      <default>true</default>
      <summary>Show the weekday</summary>
      <description>
            Whether to show the weekday in addition to the date.
      </description>
    </key>
    <key name="time-format" enum="org.gnome.shell.extensions.text-clock.time-format">
      <default>"format-one"</default>
      <summary>Time format</summary>
      <description>
            The format to use for the time display.
      </description>
    </key>
    <key name="color-mode" enum="org.gnome.shell.extensions.text-clock.color-mode">
      <default>"default"</default>
      <summary>Color mode</summary>
      <description>
            The color mode to use for the clock text.
      </description>
    </key>
    <key name='clock-color' type='s'>
      <default>'#FFFFFF'</default>
      <summary>Clock text color</summary>
      <description>
            The color for the clock time text.
      </description>
    </key>
    <key name='date-color' type='s'>
      <default>'#FFFFFF'</default>
      <summary>Date text color</summary>
      <description>
            The color for the date text.
      </description>
    </key>
    <key name='divider-color' type='s'>
      <default>'#FFFFFF'</default>
      <summary>Divider text color</summary>
      <description>
            The color for the divider text.
      </description>
    </key>
    <key name="divider-preset" enum="org.gnome.shell.extensions.text-clock.divider-preset">
      <default>"bullet"</default>
      <summary>Divider preset</summary>
      <description>
            The preset to use for the divider between time and date.
      </description>
    </key>
    <key name='custom-divider-text' type='s'>
      <default>' | '</default>
      <summary>Custom divider text</summary>
      <description>
            The custom text to use as a divider when divider-preset is set to custom.
      </description>
    </key>
    <key name='last-seen-version' type='s'>
      <default>''</default>
      <summary>Last seen extension version</summary>
      <description>
            The version-name of the extension the user last saw. Used to show an
            update notification when the extension upgrades.
      </description>
    </key>
  </schema>
</schemalist>