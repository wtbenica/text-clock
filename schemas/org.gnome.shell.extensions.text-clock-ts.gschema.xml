<schemalist gettext-domain="text-clock-ts@benica.dev">
  <enum id="org.gnome.shell.extensions.text-clock-ts.fuzziness">
    <value value="0" nick="1 minute"/>
    <value value="1" nick="5 minutes"/>
    <value value="2" nick="10 minutes"/>
    <value value="3" nick="15 minutes"/>
  </enum>

  <schema id='org.gnome.shell.extensions.text-clock-ts' path='/org/gnome/shell/extensions/text-clock-ts/'>
    <key name='show-date' type='b'>
      <default>true</default>
      <summary>Show the date</summary>
      <description>
            Whether to show the date in addition to the time.
      </description>
    </key>
    <key name='fuzziness' enum="org.gnome.shell.extensions.text-clock-ts.fuzziness">
      <default>"5 minutes"</default>
      <summary>Time fuzziness</summary>
      <description>
            The number of minutes to fuzz the displayed time by.
      </description>
    </key>
  </schema>
</schemalist>