  "include": [
    "../ambient.d.ts",
  ],
  "files": [
    "../extension.ts",
    "../clock_formatter.ts",
    "../word_pack.ts",
    "../constants/index.ts",
    "../constants/dates/extension.ts",
    "../constants/dates/prefs.ts",
    "../constants/times/extension.ts",
    "../constants/times/prefs.ts",
    "../ui/clock_label.ts",
    "../ui/prefs.ts",
  ],
}