{
  "compilerOptions": {
    "module": "ES2022",
    "moduleResolution": "bundler",
    "rootDir": "../src",
    "outDir": "../dist",
    "sourceMap": false,
    "strict": true,
    "target": "ES2022",
    "lib": [
      "ES2022"
    ],
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "types": [
      "@girs/gjs",
      "@girs/gnome-shell/ambient"
    ],
    "skipLibCheck": true
  },
  "include": [
    "../src/**/*.ts",
  ],
  "exclude": [
    "../src/tests",
    "../src/utils/logger_console.ts",
    "../node_modules",
    "../dist"
  ]
}