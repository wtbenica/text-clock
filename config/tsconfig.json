{
  "compilerOptions": {
    "module": "ES2022",
    "moduleResolution": "bundler",
    "outDir": "../dist",
    "sourceMap": false,
    "strict": true,
    "target": "ES2022",
    "lib": [
      "ES2022"
    ],
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "types": [
      "@girs/gjs",
      "@girs/gnome-shell/ambient"
    ],
    "skipLibCheck": true
  },
  "include": [
    "../*.ts",
    "../core/**/*.ts",
    "../ui/**/*.ts",
    "../utils/**/*.ts",
    "../services/**/*.ts",
    "../constants/**/*.ts",
    "../models/**/*.ts",
    "../types/**/*.ts",
    "../**/*.d.ts"
  ],
  "exclude": [
    "../tests",
    "../node_modules",
    "../dist"
  ]
}