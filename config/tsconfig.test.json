{
    "extends": "./tsconfig.json",
    "compilerOptions": {
        "rootDir": "../src",
        "outDir": "../dist-test",
        "types": [
            "jest",
            "@types/jest",
            "node"
        ],
        "skipLibCheck": true,
        "allowJs": true,
        "allowImportingTsExtensions": true,
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "noEmit": true,
    },
    "include": [
        "../src/tests/**/*.ts",
    ],
    "exclude": [
        "../node_modules",
        "../dist",
        "../dist-test",
        "../src/utils/logger_gjs.ts"
    ],
    "files": [
        "../src/constants/dates/core.ts",
        "../src/constants/times/core.ts",
        "../src/utils/gettext/gettext_utils.ts",
        "../src/utils/gettext/gettext_utils_ext.ts",
        "../src/utils/gettext/gettext_utils_prefs.ts",
        "../src/utils/logging/logger_interface.ts",
        "../src/utils/parse_utils.ts",
        "../src/utils/style/style_utils.ts",
        "../src/utils/translate/translate_pack_utils.ts",
        "../src/utils/color/accent_color_utils.ts",
        "../src/tests/test_utils/console_logger.ts"
    ]
}