{
    "extends": "./tsconfig.json",
    "compilerOptions": {
        "rootDir": "../src",
        "outDir": "../dist-test",
        "types": [
            "jest",
            "@types/jest",
            "node"
        ],
        "skipLibCheck": true,
        "allowJs": true,
        "allowImportingTsExtensions": true,
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "noEmit": true,
    },
    "include": [
        "../src/tests/**/*.ts",
    ],
    "exclude": [
        "../node_modules",
        "../dist",
        "../dist-test",
        "../src/utils/logger_gjs.ts"
    ],
    "files": [
        "../src/constants/dates/core.ts",
        "../src/constants/times/core.ts",
        "../src/utils/gettext/index.ts",
        "../src/utils/logging/index.ts",
        "../src/utils/parse/index.ts",
        "../src/utils/style/index.ts",
        "../src/utils/translate/index.ts",
        "../src/utils/color/index.ts"
    ]
}